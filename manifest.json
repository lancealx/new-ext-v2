{
  "manifest_version": 3,
  "name": "Nano Loan Origination Extension (Pipeline Pro)",
  "version": "1.0.0",
  "description": "Enterprise-grade Chrome extension for enhanced loan origination workflow within Canopy Mortgage's Nano LOS platform.",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "background",
    "sidePanel"
  ],
  
  "host_permissions": [
    "https://canopymortgage.nanolos.com/*",
    "https://api.nanolos.com/*",
    "https://storage.googleapis.com/*"
  ],
  
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://canopymortgage.nanolos.com/*"
      ],
      "js": ["dist/content.js"],
      "css": ["dist/content.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "dist/popup.html",
    "default_title": "Pipeline Pro",
    "default_icon": {
      
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "side_panel": {
    "default_path": "dist/sidepanel.html"
  },
  
  "options_page": "dist/options.html",
  
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "dist/dashboard.html",
        "dist/assets/*",
        "icons/*"
      ],
      "matches": [
        "https://canopymortgage.nanolos.com/*"
      ]
    }
  ]
} 