{
  "name": "nano-loan-origination-extension",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Enterprise Chrome extension for Nano LOS workflow enhancement",
  "main": "index.js",
  "scripts": {
    "dev": "tsc -w",
    "dev:vite": "vite",
    "dev:ext": "vite build --watch --mode development",
    "build": "node scripts/create-icons.js && tsc && npm run copy-extension-files",
    "build:prod": "tsc -b && vite build --mode production && node scripts/fix-service-worker.js",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "copy-extension-files": "copyfiles -u 1 public/* public/**/* dist/"
  },
  "keywords": [
    "chrome-extension",
    "loan-origination",
    "nano-los",
    "enterprise",
    "dashboard",
    "kanban"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ag-grid-enterprise/server-side-row-model": "^31.2.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@samrum/vite-plugin-web-extension": "^5.1.1",
    "ag-grid-community": "^31.2.0",
    "ag-grid-enterprise": "^31.2.0",
    "ag-grid-react": "^31.2.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.356.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/chrome": "^0.0.263",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.28",
    "@types/react": "^18.2.65",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.35",
    "rimraf": "^5.0.7",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.2",
    "typescript-eslint": "^8.30.1",
    "vite": "^5.1.6"
  },
  "browserslist": {
    "production": [
      "Chrome >= 100"
    ],
    "development": [
      "Chrome >= 100"
    ]
  }
}
